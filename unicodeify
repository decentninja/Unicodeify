#!/usr/bin/env bash

sed -e '
	s/<-/←/g;
	s/->/→/g;
	s/!=/≠/g;
	s/<=/≤/g;
	s/>=/≥/g;
	s/ \* / · /g;
	s/exists(\([^)]*\))/∃\1/g;
	s/sqrt(\([^)]*\))/√\1/g;
	s/sum(\([^)]*\))/∑\1/g;
	s/all(\([^)]*\))/∀\1/g;
	s/not(\([^)]*\))/¬\1/g;
	s/\([^_]*\)_1/\1₁/g;
	s/\([^_]*\)_2/\1₂/g;
	s/\([^_]*\)_3/\1₃/g;
	s/\([^_]*\)\^1/\1¹/g;
	s/\([^_]*\)\^2/\1²/g;
	s/pi/π/g;
'