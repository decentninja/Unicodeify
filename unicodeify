#!/usr/bin/env bash

perl -pe  '
	s/<-/←/g;
	s/->/→/g;
	s/!=/≠/g;
	s/<=/≤/g;
	s/>=/≥/g;
	s/ \* / · /g;
	s/exists(\([^)]*\))/∃\1/g;
	s/sqrt(\([^)]*\))/√\1/g;
	s/sum(\([^)]*\))/∑\1/g;
	s/all(\([^)]*\))/∀\1/g;
	s/not(\([^)]*\))/¬\1/g;
	s/_1/₁/g;
	s/_2/₂/g;
	s/_3/₃/g;
	s/\^1/¹/g;
	s/\^2/²/g;
	s/\bpi\b/π/g;
'